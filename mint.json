{
  "$schema": "https://mintlify.com/schema.json",
  "name": "CCCAMBOX TV RESELLER API - BETA",
  "versions": ["v1-beta"],
  "logo": {
    "dark": "/logo/dark.svg",
    "light": "/logo/light.svg"
  },
  "openapi": "/openapi.json",
  "favicon": "/favicon.svg",
  "api": {
    "baseUrl": "https://api.reselliptv.com",
    "auth": {
      "method": "key",
      "name": "x-api-key"
    }
  },
  "colors": {
    "primary": "#2c72eb",
    "light": "#2c72eb",
    "dark": "#2c72eb",
    "anchors": {
      "from": "#2c72eb",
      "to": "#2c72eb"
    }
  },
  "topbarLinks": [
    {
      "name": "Login",
      "url": "https://cccambox.com/dashboard"
    }
  ],
  "topbarCtaButton": {
    "name": "Get Started",
    "url": "https://cccambox.com/checkout/resellers"
  },

  "tabs": [
    { "name": "Documentation", "url": "/doc" },
    {
      "name": "API Reference",
      "url": "/reference",
      "openapi": "/openapi.json",
      "version": "v1-beta"
    },
    { "name": "Libraries", "url": "/libraries", "isDefaultHidden": true }
  ],

  "anchors": [
    {
      "name": "Website",
      "icon": "globe-pointer",
      "url": "https://cccambox.com"
    }
  ],

  "navigation": [
    {
      "group": "Getting Started",
      "pages": ["doc/introduction", "doc/api-changelog"]
    },
    {
      "group": "API Overview",
      "pages": [
        "doc/api-keys",
        "doc/versionning",
        "doc/protocol",
        "doc/authentification",
        "doc/pagination",
        "doc/making-requests",
        "doc/rate-limit",
        "doc/request-ids",
        "doc/error-handling"
      ]
    }
  ],

  "footerSocials": {
    "website": "https://cccambox.com"
  }
}
